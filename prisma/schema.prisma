generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  email             String    @unique
  email_verified_at DateTime?
  password          String? // Made optional for OAuth users
  role              String    @default("USER")
  last_login        DateTime?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  oauthAccount OAuthAccount?

  profile       Profile?
  RefreshToken  RefreshToken[]
  PasswordReset PasswordReset[]
  Placemark     Placemark[]
  Category      Category[]
  reviews       Review[]
}

model OAuthAccount {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  provider   String // "google"
  providerId String // The unique ID from the provider (e.g., sub in Google)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId

  @@unique([provider, providerId])
}

model Profile {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  first_name    String
  last_name     String
  contact_email String?
  contact_phone String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId
}

model RefreshToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  jti       String   @unique
  token     String   @unique
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])
}

model PasswordReset {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
}

// Represents a classification for camping spots (e.g., Garden, Driveway).
model Category {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String      @unique
  description String?
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  Placemark   Placemark[]
  user        User        @relation(fields: [userId], references: [id])
  userId      String      @db.ObjectId
}

// Represents a physical camping listing hosted by a user.
model Placemark {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?

  // Physical address details
  street       String
  house_number String?
  zip          Int
  city         String
  country      String

  // Image URL from Cloudinary (Level 2 Feature)
  image_url String?

  // Geographical coordinates for map placement
  lat Float
  lng Float

  // Analytics metric: number of times this listing has been viewed
  view_count Int @default(0)

  // Visibility control: true if the listing is visible to search
  is_public Boolean @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  userId     String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String   @db.ObjectId

  reviews Review[]
}

// Represents a review/comment on a placemark.
// Supports ratings (1-5) and host replies (via parentId).
model Review {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  rating     Int? // Null if it's just a reply or comment without rating
  comment    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  placemark   Placemark @relation(fields: [placemarkId], references: [id], onDelete: Cascade)
  placemarkId String    @db.ObjectId

  // Support for host replies
  parent   Review?  @relation("ReviewReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentId String?  @db.ObjectId
  replies  Review[] @relation("ReviewReplies")
}
